{{>header}}

  <div class="private">
    {{#show_secret}}
    <div class="uri">
      <span class="pretext">Share this URI:</span><br/>
      <input value="{{share_uri}}"/>
      <p>The person who receives it will be able to access it one time only.</p>
    </div>
    <div class="secret">
      <span class="pretext">SECRET:</span><br/>
      <p>(careful: it will disappear when you refresh.)</p>
      {{#one_liner}}
      <input value="{{ssecret.value}}" />
      {{/one_liner}}
      {{^one_liner}}
      <textarea rows="{{display_lines}}" cols="80">{{ssecret.value}}</textarea>
      {{/one_liner}}
      {{#ssecret.long}}
      <p>Note: this secret was truncated b/c it was over 5KB</p>
      {{/ssecret.long}}
    </div>
    {{/show_secret}}
    
    {{^show_secret}}
    <div class="secret">
      <span class="pretext">SECRET:</span><br/>
      <input value="*******************" disabled="disabled" />
      {{#been_shared}}
      <p><em>This secret was received {{shared_date}}.</em></p>
      {{/been_shared}}
      {{^been_shared}}
      <p><em>This secret has not been received yet.</em></p>
      {{/been_shared}}
    </div>
    {{/show_secret}}
  </div>

{{>footer}}