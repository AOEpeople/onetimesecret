{{>header}}

  <div class="private">
    {{#show_secret}}
    <div class="secret">
      <span class="context">SECRET:</span><br/>
      <input value="{{ssecret.value}}" />
      <p>(careful: it will disappear when you refresh.)</p>
    </div>
    <div class="uri">
      <span class="context">share this uri:</span><br/>
      <input value="{{share_uri}}"/>
      <p>(the person who receives it will see the secret only once too.)</p>
    </div>
    {{/show_secret}}
    
    {{^show_secret}}
    <div class="secret">
      <span class="context">SECRET:</span><br/>
      <input value="*******************" disabled="disabled" />
      {{#been_shared}}
      <p><em>This secret was shared on {{shared_date}}</em></p>
      {{/been_shared}}
      {{^been_shared}}
      <p><em>No one has seen this secret yet.</em></p>
      {{/been_shared}}
    </div>
    {{/show_secret}}
  </div>

{{>footer}}