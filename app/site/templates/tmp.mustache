{{>header}}

  <div class="private">
    {{#show_secret}}
    <div class="secret">
      <span class="context">SECRET:</span><br/>
      <input value="{{ssecret.value}}" /> (<em>careful: it will disappear when you refresh</em>)
    </div>
    <div class="uri">
      <span class="context">share this uri:</span><br/>
      <input value="{{share_uri}}"/>
      <p>(The person who receives this URI will see the secret only once too.)</p>
    </div>
    {{/show_secret}}
    
    {{^show_secret}}
    <div class="secret">
      <span class="context">SECRET:</span><br/>
      {{#been_shared}}
      <em>This secret was shared on {{shared_date}}</em>
      {{/been_shared}}
      {{^been_shared}}
      <em>No one has seen this secret yet.</em>
      {{/been_shared}}
    </div>
    {{/show_secret}}
  </div>

{{>footer}}