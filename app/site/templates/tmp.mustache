{{>header}}

  <div class="shared">
    {{#err}}<p class="err">{{err}}</p>{{/err}}
    {{^show_secret}}
    <div class="passphrase">
      <form method="POST">
        <span class="pretext">Enter the passphrase:</span>
        <input name="passphrase" value="" /><br/>
        <span id="fire" class="button"><button type="submit">Continue</button></span>
      </form>
    </div>
    {{/show_secret}}
    {{#show_secret}}
    <div class="secret">
      <span class="pretext">This secret is for you:</span><br/>
      <p>(careful: it will disappear when you refresh.)</p>
      {{#one_liner}}
      <input value="{{ssecret.value}}" />
      {{/one_liner}}
      {{^one_liner}}
      <textarea rows="{{display_lines}}" cols="80">{{ssecret.value}}</textarea>
      {{/one_liner}}
      {{#ssecret.long}}
      <p>Note: this secret was truncated b/c it was over 5KB</p>
      {{/ssecret.long}}
    </div>
    {{/show_secret}}
    <ul class="nav">
      <li class="alt"><a href="/">Reply with another secret</a></li>
    </ul>
  </div>

{{>footer}}