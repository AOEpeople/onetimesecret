{{>header}}
  
  <div id="content">
    
    <h2 class="intro">Your Account</h2>
    
    Account type: {{plan.options.name}} (${{price}} per month)
    
    <hr/>
    
    {{>partial/session_messages}}
    
    <div style="float: left">
      <form action="/account" method="post">
        {{{add_shrimp}}}
        <div>
          <label for="custid">Email Address:</label>
          <input type="text" name="custid" id="custid" class="long" value="{{cust.custid}}" disabled="disabled"/><br/>
          <hr/>
          <label for="currentp">Current Password:</label>
          <input type="password" name="currentp" id="currentp" class="short" /><br/>
          <label for="newp">New Password:</label>
          <input type="password" name="newp" id="newp" class="short" /><br/>
          <label for="newp2">Confirm New Password:</label>
          <input type="password" name="newp2" id="newp2" class="short" />
          <hr/>
          <em class="light">More cool stuff coming soon! -- Delano</em>
        </div>
        
        <span id="fireSmall" class="button"><button type="submit">Update</button></span>
      </form>
    </div>
    <hr/>
    
    {{#plan.options.api}}
    <div style="float: left; margin-top: 40px">
      <h3>API Credentials</h3>
      <form action="/account/apikey" method="post">
        {{{add_shrimp}}}
        <div>
          <label for="custid">Your API token:</label>
          <span class="highlight2">{{#cust.apitoken}}{{cust.apitoken}}{{/cust.apitoken}}</span>
          {{^cust.apitoken}}<em>Click button to generate</em>{{/cust.apitoken}}
          <hr/>
        </div>
        
        <span id="fireSmall" class="button"><button type="submit">Regenerate Token</button></span>
      </form>
    </div>
    <hr/>
    {{/plan.options.api}}
  </div>
  
{{>footer}}