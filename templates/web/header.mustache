    .button button {
      background-color: {{primary_color}};
      border-left: 1px solid {{secondary_color}};
      border-top: 1px solid {{secondary_color}};
      border-right: 1px solid {{border_color}};
      border-bottom: 1px solid {{border_color}};
      text-shadow: 1px 1px 0 {{border_color}};
    }
    .button button:hover {
      border-left: 1px solid {{border_color}};
      border-top: 1px solid {{border_color}};
      border-right: 1px solid {{secondary_color}};
      border-bottom: 1px solid {{secondary_color}};
      text-shadow: 1px 1px 0 {{secondary_color}};
    }
    #brandedlogo { background:#ffffff url({{banner_url}}) no-repeat right top; }
    #banner { background-color: {{primary_color}}; }
  </style>
  {{/override_styles}}
