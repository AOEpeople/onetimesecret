{{>partial/session_messages}}

<form id="createSecret" method="post">
  <ul class="nav">
    <li class="primary">
      <input type="radio" id="shareRadio" name="kind" value="share" checked="checked" />
      {{^authenticated}}
      <label for="shareRadio">Paste it here!</label> 
      <span class="context">(e.g. a secret phrase, a special link, a bad joke etc)</span>
      {{/authenticated}}
      {{#authenticated}}
      <label for="shareRadio">Enter secret content:</label> 
      <span class="context"></span>
      {{/authenticated}}
      <textarea name="secret" class="secretValue" rows="3" cols="80"></textarea>
    </li>
    <li class="secondary">
      <input type="radio" id="generateRadio" name="kind" value="generate" />
      {{^authenticated}}
      <label for="generateRadio">Or generate a unique secret</label>
      <span class="context">(e.g. for a temporary password)</span>
      {{/authenticated}}
      {{#authenticated}}
      <label for="generateRadio">Or generate a secret</label>
      <span class="context">(e.g. for a temporary password)</span>
      {{/authenticated}}
    </li>
    <div id="optionsBlock">
      <a href="#" id="optionsToggle">More options</a>
      <div id="options">
        Enter a passphrase: <input type="text" name="passphrase" value="" />
      </div>
    </div>
    <span id="fire" class="button"><button type="submit">Create a secret link{{^authenticated}}*{{/authenticated}}</button></span>
  </ul>
</form>

<div class="intro2">
  {{^authenticated}}
  <em>* A secret link is available only once and then it disappears forever.</em>
  {{/authenticated}}
</div>