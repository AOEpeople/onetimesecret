{{>partial/session_messages}}

<form id="createSecret" method="post" autocomplete="off" action="/" class="form-horizontal">
  {{{add_shrimp}}}
  <fieldset>
    <textarea rows="7" class="btn-block" name="secret" autocomplete="off" placeholder="{{#authenticated}}Secret content goes here...{{/authenticated}}"></textarea>
    {{#display_options}}
    <div class="well options-box">
      <div class="title">Privacy Options</div>
      <div class="control-group">
        <label class="control-label lighter" for="passphraseField">Passphrase:</label>
        <div class="controls">
          <input class="input-block-level" type="text" name="passphrase" id="passphraseField" value="" placeholder="Passphrase for extra security (optional)" autocomplete="off" />
        </div>
      </div>
      {{#display_recipients}}
      <div class="control-group">
        <label class="control-label lighter" for="recipientField">Recipient address:</label>
        <div class="controls">
          <input class="input-block-level" type="text" name="recipient[]" id="recipientField" value="" placeholder="Enter an email address (optional)" autocomplete="off" />
        </div>
      </div>
      {{/display_recipients}}
    </div>
    {{/display_options}}
    <button class="btn btn-large btn-block btn-custom cufon" type="submit" name="kind" value="share" >Create a secret link{{^authenticated}}*{{/authenticated}}</button>
    <button class="btn btn-large btn-block cufon" type="submit" name="kind" value="generate" >Or generate a random password</button>
  </fieldset>
</form>




