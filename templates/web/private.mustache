{{>header}}

  <div class="private">
    {{#show_secret}}
    <div class="uri">
      <span class="pretext">Share this secret link:</span><br/>
      <input id="secreturi" class="selectable" value="{{share_uri}}" disabled="disabled" />
      <p>
        {{^has_passphrase}}
        <strong>Expires in {{expiration_stamp}}</strong>.
        {{/has_passphrase}}
        {{#has_passphrase}}
